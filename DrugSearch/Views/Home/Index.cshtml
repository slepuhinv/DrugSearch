@{
    ViewBag.Title = "Home Page";
}

<div id="map" class="map"></div>

<div class="sidepanel">
    <div class="form-group">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Название лекарства" data-bind="value: searchString">
        </div>
        <div class="input-group">
            <button type="submit" class="btn btn-success" data-bind="click:find">Искать</button>
        </div>
    </div>
    <table class="table table-sm" data-bind="visible: data().length > 0">
        <thead>
            <tr>
                <th>Название</th>
                <th>Цена мин.</th>
                <th>Цена макс</th>
                <th>Число аптек</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: data">
            <tr data-bind="click: $root.rowClicked">
                <td data-bind="text: drugName"></td>
                <td data-bind="text: priceMin"></td>
                <td data-bind="text: priceMax"></td>
                <td data-bind="text: aptekasCount"></td>
            </tr>
        </tbody>
    </table>
</div>
